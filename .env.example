# MongoDB Configuration
# For local development, use the default MongoDB container
MONGO_URI=mongodb://mongodb:27017/shopSphere

# For production with MongoDB Atlas, replace with your connection string:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/shopSphere?retryWrites=true&w=majority

# JWT Secret (generate a secure random string for production)
JWT_SECRET=your_jwt_secret_here

# Service Ports
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=5001
PRODUCT_SERVICE_PORT=5002
ORDER_SERVICE_PORT=5003
NOTIFICATION_SERVICE_PORT=5004

# MongoDB Express Admin UI
MONGO_EXPRESS_PORT=8081
